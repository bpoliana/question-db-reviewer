<div class="container">
	<div class="question_wrapper s12 m4 l8">
		<br>
		<table>
			<thead>
				<tr>
					<th>Matéria</th>
					<th>Questão</th>
					<th>Status</th>
				</tr>
			</thead>	
			<tbody>
				<% @questions.each do |question| %>
				<tr>
					<td><%= question.title %></td>
					<td><%= question.id %></td>
					<td><%= question.body %></td>
					<td><%= question.status %></td>
				</tr>
				<% end -%>
			</tbody>
		</table>
		
	</div>

</div>